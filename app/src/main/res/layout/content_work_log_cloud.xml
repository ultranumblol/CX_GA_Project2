<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_work_log_cloud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wgz.com.cx_ga_project.activity.WorkLogCloudActivity"
    tools:showIn="@layout/activity_work_log_cloud">
    <!--<com.jude.easyrecyclerview.EasyRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wl_cloud_rv"
        app:scrollbarStyle="insideOverlay"
        ></com.jude.easyrecyclerview.EasyRecyclerView>-->
    <com.moxun.tagcloudlib.view.TagCloudView
        android:id="@+id/tag_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:autoScrollMode="uniform"
        app:darkColor="@color/colorPrimary"
        app:lightColor="@color/gold"
        app:radiusPercent="0.6"
        app:scrollSpeed="3" />

    <android.support.v7.widget.CardView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="5dp"
        android:id="@+id/shoudong_tag"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="16dp"
        app:contentPadding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="自动标签"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="5dp"

        android:id="@+id/peizhi_tag"
        app:contentPadding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="公安标签"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>

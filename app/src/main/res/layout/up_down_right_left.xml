<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout">
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_white_48dp"
        android:id="@+id/fab_right"
        app:fabSize="mini"
        android:layout_margin="1dp"
        app:layout_constraintLeft_toRightOf="@+id/fab_up"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/fab_up"
        tools:layout_constraintTop_creator="1" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_white_48dp"
        android:id="@+id/fab_up"
        app:fabSize="mini"
        android:layout_margin="1dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        tools:layout_constraintRight_creator="1" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_stop_white_48dp"
        android:id="@+id/fab_stop"
        app:fabSize="mini"
        android:layout_margin="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/fab_up"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/fab_up"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/fab_up"
        tools:layout_constraintRight_creator="1" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_white_48dp"
        android:id="@+id/fab_left"
        app:fabSize="mini"
        android:layout_margin="1dp"
        app:layout_constraintTop_toBottomOf="@+id/fab_up"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/fab_up"
        tools:layout_constraintRight_creator="1" />



    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_white_48dp"
        android:id="@+id/fab_down"
        app:fabSize="mini"
        android:layout_margin="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/fab_stop"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/fab_stop"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/fab_stop"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/id_qingjia_item_root"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"

        app:contentPaddingLeft="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/user_face"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_broken_image_grey_400_48dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_face"
                android:text="警情ID"
                android:id="@+id/jqid"
                android:textColor="@color/cadetblue"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警日期"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/jqid"
                android:textColor="@color/cadetblue"
                android:textSize="12dp"
                android:layout_toRightOf="@id/user_face"
                android:id="@+id/jq_bjdate" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中"
                android:textColor="@color/brown"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/jq_state"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
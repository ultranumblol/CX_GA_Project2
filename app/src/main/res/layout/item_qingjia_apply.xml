<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/id_qingjia_item_root"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"

        app:contentPaddingLeft="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/user_face"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_account_circle_gray_48dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_face"
                android:text="name"
                android:id="@+id/qingjia_name"
                android:textColor="@color/cadetblue"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="18dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 请假事由"
                android:id="@+id/qingjia_reason"
                android:textColor="@color/cadetblue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请假日期"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/qingjia_reason"
                android:textColor="@color/cadetblue"
                android:layout_toRightOf="@id/user_face"
                android:id="@+id/qingjia_date" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已审核"
                android:textColor="@color/brown"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/qingjia_state"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
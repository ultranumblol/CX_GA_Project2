<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_change_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    tools:context="wgz.com.cx_ga_project.activity.ChangeCodeActivity"
    tools:showIn="@layout/activity_change_code">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newpass2"
        android:hint="确认新密码"
        app:layout_constraintLeft_toLeftOf="@+id/newpass"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/newpass"
        android:layout_marginTop="23dp"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newpass"
        android:hint="新密码"
        app:layout_constraintLeft_toLeftOf="@+id/oldpass"
        app:layout_constraintTop_toBottomOf="@+id/oldpass"
        android:layout_marginTop="18dp"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/oldpass"
        android:hint="原密码"
        app:layout_constraintLeft_toLeftOf="@+id/content_change_code"
        app:layout_constraintTop_toTopOf="@+id/content_change_code"
        android:layout_marginTop="56dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_change_code"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:text="确认修改"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_margin="12dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/content_change_code"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/newpass2"
        android:layout_marginTop="43dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_change_code"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
